 <form class="form-container">
        <input type="tel" id="numberInput" placeholder="INGRESÁ TU NÚMERO" name="numberInput" required />
        <button type="submit" id= "numberBtn" disabled>ENVIAR</button>
</form>


<style> 
  
    .form-container {
        flex-direction: column;
        display: flex;
        width: 100%;
        align-items: center;
        gap: 1rem;
        margin-top: 65%;
        
    }
    input{   
        width: 70%;
        height: 1.8rem;
        background-color:  #0074e0aa;
        border-radius: 0.3rem;
        box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.926);
        border: none;

    } input::placeholder {
        color: #ffffff;
        font-weight: bold;
        text-align: center;
    }
    button {
        border-radius: 5px;
        text-align: center;
        height: 2rem;
        width: 7rem;
        background-color: grey;
        transition: 0.5s;
        color: white;
        font-weight: bold;
        border: none;
    }
 
    button:hover {
        cursor: pointer;
        box-shadow: rgba(65, 156, 187, 0.679) 0px 1px 5px;
        border: rgb(73, 161, 190) 1px solid;
    }
    
</style>

<script>
    const numberInput = document.getElementById('numberInput') as HTMLInputElement | null;
    const numberBtn = document.getElementById('numberBtn') as HTMLButtonElement | null;

    if (numberInput && numberBtn) {
        numberInput.addEventListener('input', () => {
            if (numberInput.value.length === 10) {
                numberBtn.disabled = false;
                numberBtn.style.backgroundColor = '#0074e0';
            } else {
                numberBtn.disabled = true;
                numberBtn.style.backgroundColor = 'grey';
            }

            

        });
    }
</script>


</script>