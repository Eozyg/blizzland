<header>
    <button id="lang-button" class="lang-button">EN</button>
    <img src="/head.png" alt="Blizzard Logo" class="logo" />
    <button id="game-button" class="game-button">W</button>
</header>

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: -2rem;
    }
    .logo {
        width: 10rem;
    }
    .lang-button,
    .game-button {
        background-color: var(--accent);
        border-radius: 35%;
        font-size: 1.5rem;
        cursor: pointer;
        color: #ffffff;
        border: none;
        padding: 0.25rem 0.75rem;
        transition: background-color 0.5s ease, color 0.5s ease, border-color 0.5s ease, box-shadow 0.5s ease;
    }
    .game-button { width: 3rem; text-align: center; }
</style>

<script>
(() => {
  const themes = ['w', 'd', 'h'];
  const gameBtn = document.getElementById('game-button');
  const langBtn = document.getElementById('lang-button');

  function setTheme(theme) {
    document.documentElement.setAttribute('data-theme', theme);
    localStorage.setItem('theme', theme);
    if (gameBtn) gameBtn.textContent = theme.toUpperCase();
  }

  function cycleTheme() {
    const current = document.documentElement.getAttribute('data-theme') || localStorage.getItem('theme') || 'w';
    const idx = themes.indexOf(current);
    const next = themes[(idx + 1) % themes.length];
    setTheme(next);
  }

  const dict = {
    es: {
      formNumberPlaceholder: 'INGRESÁ TU NÚMERO',
      formPinPlaceholder: 'INGRESÁ TU PIN',
      send: 'ENVIAR',
      welcome: '¡Bienvenido a nuestro sitio de juegos!',
      bullets: [
        'Disfrutá de una gran variedad de juegos en linea',
        'Conéctate con tus amigos para tener divertidas aventuras',
        'Descubrí mundos llenos de sorpresas y desafíos',
        '¡Únete a la comunidad y comienza a jugar ahora!'
      ]
    },
    en: {
      formNumberPlaceholder: 'ENTER YOUR NUMBER',
      formPinPlaceholder: 'ENTER YOUR PIN',
      send: 'SEND',
      welcome: 'Welcome to our gaming site!',
      bullets: [
        'Enjoy a wide variety of online games',
        'Connect with friends for fun adventures',
        'Discover worlds full of surprises and challenges',
        'Join the community and start playing now!'
      ]
    }
  };

  function updateI18n(lang) {
    const d = dict[lang];

    const formNumberInput = document.querySelector('.form-container input#numberInput');
    if (formNumberInput) {
      const prev = formNumberInput.getAttribute('placeholder');
      formNumberInput.setAttribute('placeholder', d.formNumberPlaceholder || prev || '');
    }

    const formPinInput = document.querySelector('.formPin input#numberInput');
    if (formPinInput) {
      const prev = formPinInput.getAttribute('placeholder');
      formPinInput.setAttribute('placeholder', d.formPinPlaceholder || prev || '');
    }

    const numberBtn = document.getElementById('numberBtn');
    if (numberBtn) {
      const prev = numberBtn.textContent || '';
      numberBtn.textContent = d.send || prev;
    }

    const pinBtn = document.querySelector('.formPin button[type="submit"]');
    if (pinBtn) {
      const prev = pinBtn.textContent || '';
      pinBtn.textContent = d.send || prev;
    }

    const h3 = document.querySelector('.container h3');
    if (h3) {
      const prev = h3.textContent || '';
      h3.textContent = d.welcome || prev;
    }

    const items = document.querySelectorAll('.description li');
    if (items && items.length && d.bullets) {
      items.forEach((li, i) => { if (d.bullets[i]) li.textContent = d.bullets[i]; });
    }
  }

  function setLang(lang) {
    document.documentElement.setAttribute('lang', lang);
    localStorage.setItem('lang', lang);
    if (langBtn) langBtn.textContent = lang === 'es' ? 'EN' : 'ES';
    document.title = lang === 'en' ? 'Blizzard Entertainment' : 'Blizzard Entretenimiento';
    updateI18n(lang);
  }

  function toggleLang() {
    const current = document.documentElement.getAttribute('lang') || localStorage.getItem('lang') || 'es';
    const next = current === 'es' ? 'en' : 'es';
    setLang(next);
  }

  const initTheme = document.documentElement.getAttribute('data-theme') || localStorage.getItem('theme') || 'w';
  setTheme(initTheme);
  const initLang = document.documentElement.getAttribute('lang') || localStorage.getItem('lang') || 'es';
  setLang(initLang);

  gameBtn?.addEventListener('click', cycleTheme);
  langBtn?.addEventListener('click', toggleLang);
})();
</script>
    
