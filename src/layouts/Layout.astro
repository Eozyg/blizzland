<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Blizzard Enterteintment</title>
		<script is:inline>
			// Setea tema e idioma iniciales (evita parpadeos antes de que cargue el header)
			try {
				const savedTheme = localStorage.getItem('theme') || 'w';
				document.documentElement.setAttribute('data-theme', savedTheme);
			} catch {}
			try {
				const savedLang = localStorage.getItem('lang') || 'es';
				document.documentElement.setAttribute('data-lang', savedLang);
				document.documentElement.lang = savedLang;
			} catch {}
		</script>
	</head>
	<body>
		<slot />
		
	</body>
</html>

<style>
	/* Tema W (default: estilo actual) */
	:root,
	html[data-theme="w"] {
		--accent: #0074e0;
		--accent-weak: #0074e0aa;
		--text-color: #ffffff;
		--page-bg-color: white;
		--border-color: #ccc;
		--bg-image: url('/backg.webp');
	}

	/* Tema D: rojo */
	html[data-theme="d"] {
		--accent: #d32f2f;
		--accent-weak: #d32f2fcc;
		--text-color: #ffffff;
		--page-bg-color: #2a0e0e;
		--border-color: #e57373;
		--bg-image: url('/head.png');
	}

	/* Tema H: ocre con celeste */
	html[data-theme="h"] {
		--accent: #00bcd4;
		--accent-weak: #cc7722cc;
		--text-color: #ffffff;
		--page-bg-color: #0e1e2b;
